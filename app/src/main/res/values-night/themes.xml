<!-- res/values/styles.xml -->
<resources>
    <style name="Theme.SOSDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>       <!-- deep red -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">#121212</item>
        <item name="materialButtonStyle">@style/RedButton</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#B71C1C</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>
