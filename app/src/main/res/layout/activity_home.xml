<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logowhite"/>

        <TextView
            android:id="@+id/header"
            android:layout_below="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sanket - SOS Dashboard"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <!-- Big SOS button -->
        <Button
            android:id="@+id/sosBtn"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SOS - मुसीबत में क्लिक करें"
            android:textSize="20dp"
            android:layout_marginBottom="12dp"
            style="@style/RedButton" />

        <Button
            android:id="@+id/sosBtn2"
            android:layout_below="@id/sosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Help Dashboard"
            android:textSize="15dp"
            android:layout_marginBottom="12dp"
            style="@style/RedButton" />

        <!-- Status -->
        <TextView
            android:id="@+id/statusTv"
            android:layout_below="@id/sosBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discovering nearby SOS..."
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>

        <!-- list of discovered active SOS rooms -->
        <ListView
            android:id="@+id/discoveredList"
            android:layout_below="@id/statusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#2b2b2b"
            android:dividerHeight="1dp"
            android:layout_marginTop="12dp"/>

<!--        <TextView-->
<!--            android:id="@+id/tvFooter"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Tap any room to join"-->
<!--            android:textColor="#CCCCCC"-->
<!--            android:gravity="center"-->
<!--            android:padding="8dp"/>-->
    </RelativeLayout>


</RelativeLayout>